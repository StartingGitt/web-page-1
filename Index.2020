    @import url('https://fonts.googleapis.com/css?family=Montserrat&display=swap');


            :root{
                --link-color:rgb(64, 68, 71);
                --link-background:lightblue;
                --font-color:#000;
                --font-size:1.2em;
                --padding:25px;
                --nav-padding:5px 15px;
                --scroll:smooth;
                --form-width:100%;
                --form-padding:5px;
                --form-margin:5px;
/*===================rainbow colors==========================================*/
                --red-clr:red;
                --orange-clr:orange;
                --yellow-clr:yellow;
                --green-clr:green;
                --blue-clr:blue;
                --indigo-clr:indigo;
                --violet-clr:violet;
            }
/*===================rainbow colors==========================================*/
            html{
                font-family:"Montserrat", Arial, Helvetica, sans-serif;
                scroll-behavior: var(--scroll);
            }

            *,
            *::before,
            *::after{
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            .wrapper{
                width:100%;
                max-width:1650px;
                margin-left:auto;
                margin-right:auto;
            }

            .main_header{
                background-color: #000;
                padding:var(--padding);
                display: flex;
                justify-content:space-between;
            }

            .main_header_logo{
                color: #fff;
                font-family: Helvetica,sans-serif;
                letter-spacing: 3px;
                margin-left: 25px;
                font-style: italic;
            }

            .main_header_ul{
                display:flex;
                list-style-type: none;
            }

            .main_header_item{
                display: inline-block;
                margin: 0 15px;
                padding: var(--nav-padding);
                text-decoration: none;
                color: #000;
                background-color: lightgrey;
                border-radius: 15px;
                transition: 100ms all ease-in-out;
            }

/*=========================================================================*/
            .dropdown{
              width: 170px;
              text-align: center;
              position: relative;
            }

             ul.dropdown_menu{
               position: absolute;
               background-color: #000;
               width: 12%;
               border-radius: 15px 15px 40px 40px;
               transform: scaleY(0);
               transform-origin: top;
               transition: 300ms all ease-in-out;
               transition-delay: 40ms;
            }

            li.drop:hover ul.dropdown_menu{
              transform: scaleY(1);
              transition: 300ms all ease-in-out;
              transition-delay: 0s;
            }

            ul.dropdown_menu li{
              list-style-type: none;

            }

            .dropdown_item{
              text-align:center;
              color: #fff;
              display: inline-block;
              padding: 10px 5px;
              width: 100%;
            }

            .dropdown_item:hover{
              background-color: gray;
            }
/*=========================================================================*/
            .main_header_item:hover{
                transform: scale(1.1);
            }

            .main{
                display: flex;
                flex-wrap:wrap;
                justify-content: center;
                align-items: center;
                padding-bottom: 20px;
            }

            .main_article{
                padding: 15px;
                width: 30%;
            }

            .main_article_p{
                line-height: 1.8;
                padding-bottom: 15px;
            }

            .main_article_header{
                text-align: center;
                padding: 10px 0;
            }

            .main_article_buttons{

                display: flex;
                justify-content: space-between;
            }

            .main_article_button{
                display: inline-block;
                width: 45%;
                height: 35px;
                border-radius: 15px;
                transition: 100ms all ease-in-out;
                cursor: pointer;
            }

            .main_article_button:hover{
                box-shadow: 2px 2px 15px rgb(0,0,0,.3);
            }

            a{
                text-decoration: none;
                color: #000;
                font-style: italic;
            }

            .main_footer{
                background-color: #000;
                display: flex;
                justify-content: space-around;
                padding: 25px;
            }

            .info{
                color: #fff;
            }

            .contact{
                color: #fff;
            }

            .article_span{
                color:orange;
                font-weight:1200;
                cursor: pointer;
            }

            .article_span:hover{
                border-bottom:2px solid orange;
            }

            .sorry{
              background-color: #cecece;
              width: 50%;
              height: 50%;
              position: absolute;
              top: 45%;
              left: 25%;
              display: flex;
              flex-flow: column nowrap;
              justify-content: center;
              align-items: center;
              box-shadow: 0 0 1500px 1500px rgba(0,0,0,0.6);
              transform: scale(0) translateZ(0);
              border: 3px solid red;
              transition: 400ms all ease-in-out;
            }

            /* :target{
              transform: scale(1);
            } */

            .sorry h1{
              padding: 15px 0;
              text-align: center;
            }

            .sorry p{
              line-height: 1.9;
              text-align: center;
              height: 50%;
              display: flex;
              align-items: center;
              justify-content:center;
            }

            .sorry a{
              display: inline-block;
              text-align: center;
              margin-left: 350px;
              border:1px solid black;
              padding: 10px 13px;
              background-color: var(--link-background);
              border-radius: 15px;
              transition: 100ms all ease-in-out;
            }

            .sorry a:hover{
              background-color: steelblue;
              transform: scale(1.1);
            }

            .buying{
              background-color: #cecece;
              width: 50%;
              height: 50%;
              position: absolute;
              top: 45%;
              left: 25%;
              display: flex;
              flex-flow: column nowrap;
              justify-content: center;
              align-items: center;
              box-shadow: 0 0 1500px 1500px rgba(0,0,0,0.6);
              transform: scale(0) translateZ(0);
              border: 3px solid red;
              transition: 400ms all ease-in-out;
            }

            :target{
              transform: scale(1);
            }

            input[name="FirstName"]{
              width: var(--form-width);
              padding:var(--form-padding);
              margin: var(--form-margin);
              font-family: "Montserrat", Arial,sans-serif;
              outline: 3px solid #cecece;
            }

            input[name="SecondName"]{
              width: var(--form-width);
              padding:var(--form-padding);
              margin: var(--form-margin);
              font-family: "Montserrat", Arial,sans-serif;
              border:none;
              outline: 3px solid #cecece;
            }

            input[name="EmailField"]{
              width: var(--form-width);
              padding:var(--form-padding);
              margin: var(--form-margin);
              margin-bottom: 15px;
              font-family: "Montserrat", Arial,sans-serif;
              border:none;
            }

            input:focus{
              box-shadow: 0 0 15px 15px rgba(0,0,0,.1);
              outline: 2px solid pink;

            }

            .buying_header{
              padding: 10px;
              letter-spacing: 2px;
            }

            .buying p{
              padding: var(--form-padding);
              font-style: italic;
            }

            .buying_form p{
              display: flex;
            }

            .buying_form label{
              width: 60%;
              line-height: 40px;
              font-family: "Montserrat", Arial, Helvetica, sans-serif;
              font-style: italic;
            }

            p.thanks{
              padding: Calc(var(--form-padding) + 15px);
              font-family: "Montserrat", Arial, Helvetica, sans-serif;
              font-weight: 900;
              letter-spacing: 2px;
            }

            .buying h1{
              margin-top: -45px;
            }

            .red{
              color: var(--red-clr);
            }

            .orange{
              color: var(--orange-clr);
            }

            .yellow{
              color: var(--yellow-clr);
            }

            .green{
              color: var(--green-clr);
            }

            .blue{
              color: var(--blue-clr);
            }

            .indigo{
              color: var(--indigo-clr);
            }

            .violet{
              color: var(--violet-clr);
            }

            .buying_buttons{
              width: 70%;
              display: flex;
              justify-content: space-between;

            }

            .buying a{
              display: inline-block;
              border:1px solid black;
              padding: 10px 13px;
              background-color: var(--link-background);
              border-radius: 15px;
              transition: 100ms all ease-in-out;
            }

            .buying a:hover{
              background-color: steelblue;
              transform: scale(1.1);
            }

            .buying a.cancel{
              margin-left: 50px;
              border:1px solid black;
              padding: 10px 65px;
              background-color: var(--link-background);
              border-radius: 15px;
              transition: 100ms all ease-in-out;
              order: -1;
            }

            .buying a.cancel:hover{
              background-color: steelblue;
              transform: scale(1.1);
            }







            </style>
